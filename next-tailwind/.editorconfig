# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
insert_final_newline = false

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.{ts,tsx}]
indent_size = 2

[*.{js,jsx}]
indent_size = 2

[*.html]
indent_size = 2
max_line_length = 120

[*.css]
indent_size = 2
max_line_length = 80

[*.scss]
indent_size = 2
max_line_length = 80
